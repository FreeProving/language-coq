-- Initial hs-to-coq.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                hs-to-coq
version:             0.0.0.0
synopsis:            Convert Haskell datatypes/functions to Coq
homepage:            http://www.deepspec.org/research/Haskell/
license:             MIT
license-file:        LICENSE
author:              Antal Spector-Zabusky
maintainer:          antal.b.sz@gmail.com
copyright:           Copyright Â© 2016 Antal Spector-Zabusky, University of Pennsylvania
category:            Language
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  src/lib/HsToCoq/ConvertHaskell/Parameters/Parsers.y

source-repository head
  type:     git
  location: https://github.com/antalsz/hs-to-coq

library
  exposed-modules:     HsToCoq.ConvertHaskell.InfixNames
                     , HsToCoq.Coq.Gallina
                     , HsToCoq.Coq.Gallina.Util
                     , HsToCoq.Coq.Gallina.Orphans
                     , HsToCoq.Coq.Gallina.Rewrite
                     , HsToCoq.Coq.Preamble
                     , HsToCoq.Coq.Pretty
                     , HsToCoq.Coq.FreeVars
                     , HsToCoq.Coq.Subst
                     , HsToCoq.PrettyPrint
                     , HsToCoq.Util.Containers
                     , HsToCoq.Util.Function
                     , HsToCoq.Util.FVs
                     , HsToCoq.Util.Generics
                     , HsToCoq.Util.List
                     , HsToCoq.Util.Monad

  build-tools:         happy == 1.19.*

  other-extensions:    TypeOperators, TupleSections, LambdaCase, MultiWayIf, EmptyCase, RecordWildCards, TypeApplications, ScopedTypeVariables, OverloadedLists, OverloadedStrings
                     , RankNTypes, ConstraintKinds
                     , MultiParamTypeClasses, FunctionalDependencies, FlexibleContexts, InstanceSigs
                     , TypeSynonymInstances, FlexibleInstances, UndecidableInstances
                     , DeriveGeneric, DeriveDataTypeable, StandaloneDeriving, GeneralizedNewtypeDeriving
                     , PatternSynonyms, ViewPatterns
                     , TemplateHaskell
                     , CPP

  build-depends:       base                 ==4.11.*
                     , template-haskell     ==2.13.*
                     , ghc                  ==8.4.*
                     , ghc-boot             ==8.4.*
                     , ghc-paths            ==0.1.*
                     , bifunctors           ==5.*
                     , semigroups           ==0.18.*
                     , transformers         ==0.5.*
                     , mtl                  ==2.2.*
                     , array                ==0.5.*
                     , lens                 ==4.16.*
                     , pipes                ==4.3.*
                     , containers           ==0.5.*
                     , validation           ==1.*
                     , syb                  ==0.7.*
                     , text                 ==1.2.*
                     , directory            ==1.3.*
                     , filepath             ==1.4.*
                     , wl-pprint-text       ==1.2.*
                     , parsec               ==3.1.*
                     , indents              ==0.5.*
                     , optparse-applicative ==0.14.*
                     , yaml                 ==0.8.*

  -- These are actually not used directly by hs-to-coq, but work around a
  -- bug(?) in GHC-8.4 that no longer loads other packages if there is a GHC
  -- environment file
  build-depends:
    test-framework >= 0.3.3,
    test-framework-quickcheck2 >= 0.2.9,
    test-framework-hunit


  hs-source-dirs:      src/lib
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-name-shadowing

executable hs-to-coq
  main-is:             Main.hs
  build-depends:       base == 4.11.*, hs-to-coq
  hs-source-dirs:      src/exe
  default-language:    Haskell2010
  ghc-options:         -Wall -fno-warn-name-shadowing
